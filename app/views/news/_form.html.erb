<%= form_with(model: news) do |form| %>
  <% if news.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
        <% news.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :tittle, style: "display: block" %>
    <%= form.text_field :tittle %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <% if user_signed_in? %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <p>Current User: <%= current_user.email %></p>
    <% else %>
      <p>Please sign in to post news.</p>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
